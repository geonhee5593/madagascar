<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <!-- 관리자 화면 제목 -->
    <TextView
        android:id="@+id/Admin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리자 화면"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1E88E5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- 공지사항 만들기 버튼 -->
    <Button
        android:id="@+id/btn_create_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지사항 만들기"
        android:backgroundTint="#42A5F5"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/Admin_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 답변 상태 보기 버튼 -->
    <Button
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답변 미확인 보기"
        android:backgroundTint="#64B5F6"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btn_create_notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 문의 목록 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewInquiries"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
