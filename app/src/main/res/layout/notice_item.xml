<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/noticeIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Notice Icon"
        android:src="@drawable/notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/noticeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="공지사항입니다"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/noticeIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/noticeTimestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2024-11-19 14:00:00"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintStart_toEndOf="@id/noticeIcon"
        app:layout_constraintTop_toBottomOf="@id/noticeText"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
