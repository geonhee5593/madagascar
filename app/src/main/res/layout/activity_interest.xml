<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 관심 분야 제목 -->
        <TextView
            android:id="@+id/tv_interest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택된 관심 분야"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp" />

        <!-- 관심분야 선택하러 가기 버튼 -->
        <Button
            android:id="@+id/btn_select_interests"
            android:layout_width="177dp"
            android:layout_height="40dp"
            android:backgroundTint="#FFFFFF"
            android:text="관심분야 선택하러 가기"
            android:textColor="#0012FF"
            android:textStyle="italic"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_selected_interests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black" />


    <!-- 축제 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_festival_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

    <!-- 뒤로 가기 버튼 -->
    <ImageView
        android:id="@+id/btn_arrow_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow"
        android:layout_gravity="end"
        android:contentDescription="Go Back" />


</LinearLayout>
